#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["LernDeutsch-Backend/LernDeutsch-Backend.csproj", "LernDeutsch-Backend/"]
RUN dotnet restore "LernDeutsch-Backend/LernDeutsch-Backend.csproj"
COPY . .
WORKDIR "/src/LernDeutsch-Backend"
RUN dotnet build "LernDeutsch-Backend.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "LernDeutsch-Backend.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "LernDeutsch-Backend.dll"]